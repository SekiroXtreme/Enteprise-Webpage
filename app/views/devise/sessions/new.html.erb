<body class="main">
  <div class="div-container">
    <div class="center">
    <img src="https://universalrepairandmaintenance.com/wp-content/uploads/2023/03/LOGO-PNG.png" class="center"  width="160vwh">
    <h3><%=t("Log in")%><h3>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label t("Email"), for:"exampleInputEmail1" ,class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"exampleInputEmail1" %>
      </div>

      <div class="mb-3">
        <%= f.label t("Password"), for:"exampleInputPassword1", class:"form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"exampleInputPassword1" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class:"form-check-input", id:"exampleCheck1" %>
          <%= f.label t("Remember me") %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t("Log in"), class:"btn btn-primary" %>
      </div>
  </div>
</body>
<% end %>
